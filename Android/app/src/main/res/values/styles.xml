<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Table"/>
    <style name="Table.TextView" tools:targetApi="o">
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">2sp</item>
        <item name="android:autoSizeMaxTextSize">32sp</item>
    </style>

    <style name="Table.TextView.Header">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearance.Test" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">14dp</item>
        <item name="cornerSizeTopRight">14dp</item>
    </style>

    <style name="fragment_title">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>